{
  "require": {
    "noahbuscher/macaw": "dev-master",
    "xiaoler/blade": "^0.3.1",
    "illuminate/database": "*"
  },
  "require-dev": {
    "crada/php-apidoc": "@dev",
    "phpunit/phpunit": "5.7.*",
    "phpunit/dbunit": "^2.0"
  },
  "autoload": {
    "classmap": [
      "app/Controllers",
      "app/Models",
      "tool"
    ],
    "psr-4": {
      "App\\": "app/",
      "Tool\\": "tool/"
    },
    "files": [
      "app/helpers.php"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestDemo.php"
    ],
    "psr-4": {
      "Tests\\": "tests/"
    }
  }
}
